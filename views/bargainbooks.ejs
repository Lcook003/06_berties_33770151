<!doctype html>
<html>
  <head>
    <title>Bargain Books, Berties Books</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <header>
      <h1>Bargain Books - Less Than £20.00!</h1>
    </header>

    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/books/list">List books</a>
      <a href="/books/addbook">Add book</a>
      <a href="/books/bargainbooks">Bargain books</a>
      <a href="/books/search">Search</a>
      <a href="/users/register">Register</a>
      <a href="/users/login">Login</a>
      <a href="/users/list">Users</a>
      <a href="/users/audit">Audit</a>
        <a href="/logout">Logout</a>
    </nav>

    <main>
      <table class="table">
        <thead>
          <tr>
            <th>Book name</th>
            <th>Price (£)</th>
          </tr>
        </thead>
        <tbody>
          <% if (bargainBooks && bargainBooks.length > 0) { %>
            <% bargainBooks.forEach(function(book) { %>
              <tr>
                <td><%= book.name %></td>
                <td><%= book.price.toFixed ? book.price.toFixed(2) : book.price %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="2">No bargain books found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </main>

    <footer>
      &copy; <%= new Date().getFullYear() %> Berties Books
    </footer>
  </body>
</html>
