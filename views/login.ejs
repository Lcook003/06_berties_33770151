<!doctype html>
<html>
  <head>
    <title>Login - Berties Books</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <header>
      <h1>Login</h1>
    </header>

    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/books/list">List books</a>
      <a href="/books/addbook">Add book</a>
      <a href="/books/bargainbooks">Bargain books</a>
      <a href="/books/search">Search</a>
      <a href="/users/register">Register</a>
      <a href="/users/login">Login</a>
      <a href="/users/list">Users</a>
      <a href="/users/audit">Audit</a>
        <a href="/logout">Logout</a>
    </nav>

    <main>
      <% if (message) { %>
        <p style="color:red;"><%= message %></p>
      <% } %>

      <form method="POST" action="/users/loggedin" class="card">
        <label>
          Username:
          <input type="text" name="username" required>
        </label>

        <label>
          Password:
          <input type="password" name="password" required>
        </label>

        <button type="submit">Login</button>
      </form>
    </main>

    <footer>
      &copy; <%= new Date().getFullYear() %> Berties Books
    </footer>
  </body>
</html>
