<!doctype html>
<html>
  <head>
    <title>Weather Forecast</title>
    <link rel="stylesheet" href="/styles.css">
  </head>

  <body>
    <header><h1>Weather Forecast</h1></header>

    <nav>
      <a href="/">Home</a>
      <a href="/books/list">Books</a>
      <a href="/weather">Weather</a>
      <a href="/api/books">Books API</a>
    </nav>

    <form method="GET" action="/weather/now" class="card">
      <label>Enter a city:</label>
      <input type="text" name="city" placeholder="London">
      <button type="submit">Get Weather</button>
    </form>

    <% if (error) { %>
      <p style="color:red;"><%= error %></p>
    <% } %>

    <% if (weather) { %>
      <div class="card">
        <%= weather %>
      </div>
    <% } %>
  </body>
</html>
