<!doctype html>
<html>
  <head>
    <title>Register - Berties Books</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <header>
      <h1>Register</h1>
    </header>

    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/books/list">List books</a>
      <a href="/books/addbook">Add book</a>
      <a href="/books/bargainbooks">Bargain books</a>
      <a href="/weather">Weather</a>
      <a href="/api/books">Books API</a>
      <a href="/books/search">Search</a>
      <a href="/users/register">Register</a>
      <a href="/users/login">Login</a>
      <a href="/users/list">Users</a>
      <a href="/users/audit">Audit</a>
    <a href="/users/logout">Logout</a>
    </nav>

    <main>
      <form method="POST" action="/users/registered" class="card">
        <label>
          Username:
          <input type="text" name="username" required>
        </label>

        <label>
          First name:
          <input type="text" name="first" required>
        </label>

        <label>
          Last name:
          <input type="text" name="last" required>
        </label>

        <label>
          Email:
          <input type="email" name="email" required>
        </label>

        <label>
          Password:
          <input type="password" name="password" required>
        </label>

        <button type="submit">Register</button>
      </form>
    </main>

    <footer>
      &copy; <%= new Date().getFullYear() %> Berties Books
    </footer>
  </body>
</html>
