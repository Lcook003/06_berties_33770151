<!doctype html>
<html>
  <head>
    <title>Search - Berties Books</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <header>
      <h1>Search for a book</h1>
    </header>

    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/books/list">List books</a>
      <a href="/books/addbook">Add book</a>
      <a href="/books/bargainbooks">Bargain books</a>
      <a href="/books/search">Search</a>
      <a href="/users/register">Register</a>
      <a href="/users/login">Login</a>
      <a href="/users/list">Users</a>
      <a href="/users/audit">Audit</a>
    <a href="/users/logout">Logout</a>
    </nav>

    <main>
      <form method="GET" action="/books/search" class="card">
        <label>
          Search keyword:
          <input type="text" name="keyword" value="<%= keyword %>" required>
        </label>
        <button type="submit">Search</button>
      </form>

      <% if (keyword && keyword.length > 0) { %>
        <h2>Results for "<%= keyword %>"</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Book name</th>
              <th>Price (Â£)</th>
            </tr>
          </thead>
          <tbody>
            <% if (books && books.length > 0) { %>
              <% books.forEach(function(book) { %>
                <tr>
                  <td><%= book.name %></td>
                  <td><%= book.price.toFixed ? book.price.toFixed(2) : book.price %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="2">No books found matching that keyword.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      <% } %>
    </main>

    <footer>
      &copy; <%= new Date().getFullYear() %> Berties Books
    </footer>
  </body>
</html>
